<div id="contact">

      <div class="row">

        <div class="col-lg-6 zebre" style="background-image: url(<%= asset_path 'nimes.jpg'%>); background-position:top;">
        </div>


        <div class="col-lg-6 zebre" style="background-image: url(<%= asset_path "zebre.png"%>); padding-top:6em; padding-bottom:6em; ">


          <h2 class="pl-4 pb-4 mb-4 titre-categorie" >Ajouter un produit : </h2>

          <div class="container php-email-form">
            <div class="row pl-4 pr-4">


              <% flash.each do |type, msg| %>
                <div class="alert alert-info margin-top:100px; " style="z-index:1">
                  <%= msg %>
                </div>
              <% end %>

              <%= form_tag url_for(cartables_path), :cartables => @cartable, method: 'post' do %>
                <div class="row pl-4 pr-4">

                  <div class="col-lg-12">
                    <div class="form-group contact-block1">
                      <%= text_field_tag 'name', nil, placeholder: 'Nom du produit', class:"form-control" %>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= text_area_tag 'short_desc', nil, placeholder: 'Descrption courte', class:"form-control",rows:"6" %>
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= text_area_tag 'long_desc', nil, placeholder: 'description longue', class:"form-control" ,rows:"12"%>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= text_area_tag 'Matières', nil, placeholder: 'Matières / Caractéristiques',rows:"6", class:"form-control" %>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <div class="form-group">
                      <%= text_field_tag 'price', nil, placeholder: 'Prix longue', class:"form-control" %>
                    </div>
                  </div>


                  <div class="col-lg-12">
                    <%= submit_tag "    Envoyer    ", class: "btn btn-outline-primary", style:"border-radius:20px;" %>
                    <%end%>
                  </div>

                </div>
              </div>
            </div>


        </div>
      </div>

</div><!-- End Contact Section -->
